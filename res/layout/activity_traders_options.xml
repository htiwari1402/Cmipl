<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="In Store"
            android:textStyle="bold"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/txtTraderOptionsStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTraderOptionsStoreVisitNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTraderOptionsStoreName"
            android:layout_alignParentBottom="true"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
       android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnTradersOption_OrederBooking"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="Order Booking"
                
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTradeOption_OrderEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                  android:background="#c8c8c8"
                android:text="Order Edit"
                
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTradeOption_Initiative"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:background="#ffffff"
                android:text="Initiatives"
                
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTradeOption_Invoice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#c8c8c8"
                android:text="Invoice"
                
                android:textSize="20sp"
                android:textStyle="bold"  />

            <Button
                android:id="@+id/btnTradeOption_visibility"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                 android:background="#ffffff"
                android:text="Visibility"
                
                android:textSize="20sp"
                android:textStyle="bold"  />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>