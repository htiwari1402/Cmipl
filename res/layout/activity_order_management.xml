<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Orders"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearbelow2"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#1ea8e0" >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="13dp" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearbelow2"
        android:background="#1ea8e0" >

        <Button
            android:id="@+id/btnOrderManagementRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Route"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnOrderManagementNear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Near"
              android:textStyle="bold"
           />

        <Button
            android:id="@+id/btnOrderManagementMap"
              android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Map"
          />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#1ea8e0" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_above="@+id/relativeLayout3"
                android:layout_centerHorizontal="true" >
            </RelativeLayout>

            <fragment
                android:id="@+id/fragmentOrderManagment_Route"
                android:name="com.cmipl.cmipl_app.Fragm_OderManagement_Route"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/relativeLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <fragment
                android:id="@+id/fragmentOrderManagment_Near"
                android:name="com.cmipl.cmipl_app.Fragm_OrderManagement_Near"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relativeLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <fragment
                android:id="@+id/fragmentOrdermanagmentMap"
                android:name="com.cmipl.cmipl_app.FragmMap_ordermanagment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relativeLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>