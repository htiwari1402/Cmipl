<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgVisibilityListpic"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/bitmp_loginbackground" />

    <RelativeLayout
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgVisibilityListpic"
        android:background="#ffffff" >

    </RelativeLayout>

    <TextView
        android:id="@+id/txtVisibilityListPicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgVisibilityListpic"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1ea8e0" />

    <RelativeLayout
        android:layout_width="3dp"
        android:layout_height="8dp"
        android:layout_below="@+id/txtVisibilityListPicTitle"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

</RelativeLayout>
