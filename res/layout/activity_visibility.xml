<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Visibility"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#1ea8e0" 
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVisibilityRetailerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textVisibilityRetailerOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
             android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnUploadedpic"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Uploaded Pic"
             android:background="#ffffff"
            android:textColor="#1ea8e0" 
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUploadPic"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload Pic"
             android:background="#a8a8a8"
            android:textColor="#000000" 
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="#000000"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#1ea8e0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnvisibilityExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exit"
             android:textColor="#ffffff"
           
            android:textSize="15sp"
            android:textStyle="bold"
           
            android:background="#1ea8e0" 
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true" >

        <GridView
            android:id="@+id/gridviewVisibility"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          
            android:numColumns="3" >
        </GridView>

    </RelativeLayout>

</RelativeLayout>