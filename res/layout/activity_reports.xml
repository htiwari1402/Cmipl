<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Reports"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearbelow2"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:background="#1ea8e0" >

        <Button
            android:id="@+id/btnMMPR"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="MMPR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMDC"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="MDC"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTop10"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="TOP 10"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearbelow2"
        android:background="#1ea8e0" >

        <Button
            android:id="@+id/btnDUMTR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="DUMTR"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMumtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="MUMTR"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:background="#1ea8e0"
        android:gravity="left"
        android:text="My Monthly Performance Report"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtReportTitle"
        android:layout_centerHorizontal="true" >

        <fragment
            android:id="@+id/fragment1"
            android:name="com.cmipl.cmipl_app.FragmReportMMPR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <fragment
            android:id="@+id/fragment2"
            android:name="com.cmipl.cmipl_app.FragReportDUMTR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>