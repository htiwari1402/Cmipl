<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentTop="true"
        android:background="#1ea8e0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Trade Coverage"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearbelow2"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#1ea8e0" >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Search"
                android:textStyle="bold" 
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/editxtNewRetailerCity"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext"
                android:ems="10" 
                android:visibility="gone">

               
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearbelow2"
        android:background="#1ea8e0" >

        <Button
            android:id="@+id/btnTradecoverageRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Route"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTradecoverageNear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Near"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTradecoverageMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1ea8e0"
            android:text="Map"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <Spinner
                android:id="@+id/spinnerTradeCoverageDist"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <ListView
                android:id="@+id/listTradeCoverageRetailrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerTradeCoverageDist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" >

            </ListView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>